{
  "schemaVersion": "1.0",
  "id": "integration-plex",
  "title": "Plex Integration",
  "description": "Starter integration package for Plex-related workspace integration assets.",
  "version": "0.1.1",
  "category": "integration",
  "source": {
    "kind": "github-release",
    "channel": "github",
    "fallbackOrder": [
      "github-release",
      "local"
    ],
    "github": {
      "owner": "Ascendism",
      "repo": "carapace-integration-plex",
      "artifact": "integration-plex-${version}.zip"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ascendism/carapace-integration-plex.git"
  },
  "compatibility": {
    "carapace": {
      "minVersion": "1.0.0"
    }
  },
  "dependencies": [
    {
      "capability": "media.playback.runtime",
      "preferredPackageId": "carapace-tool-media-runtime"
    }
  ],
  "conflicts": [],
  "install": {
    "files": [
      {
        "source": "files/integrations/plex/README.md",
        "target": "integrations/plex/README.md"
      },
      {
        "source": "files/integrations/plex/integration.wizard.json",
        "target": "integrations/plex/integration.wizard.json"
      }
    ],
    "patches": [],
    "restart": {
      "recommended": true,
      "reason": "Integration registration refresh"
    }
  },
  "integrationWizard": {
    "path": "files/integrations/plex/integration.wizard.json"
  }
}
